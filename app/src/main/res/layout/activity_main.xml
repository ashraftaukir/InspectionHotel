<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <!--        <variable-->
        <!--            name="onClick"-->
        <!--            type="com.localstreet.interfaces.OnClickLisner" />-->

        <!--        <import type="com.localstreet.models.ClickFrom" />-->


        <variable
            name="inspectionTypeAdapter"
            type="com.taukir.test.adapter.InspectionAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.MainActivity">

        <TextView
            android:id="@+id/testTv"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="test"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/differentBtnConstraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/testTv">

            <TextView
                android:id="@+id/redBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/red_btn_bg"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/orangeBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/orange_btn_bg"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="30sp"
                app:layout_constraintEnd_toStartOf="@+id/redBtn"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rsv_search_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adapter="@{inspectionTypeAdapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/differentBtnConstraintLayout"
            tools:itemCount="10"
            tools:listitem="@layout/inspection_item_row" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>